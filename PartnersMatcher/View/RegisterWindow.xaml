        <TextBox x:Name="tb_fname" HorizontalAlignment="Left" Height="25" Margin="657,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="229" Grid.Row="1"/>

        <TextBlock x:Name="textBlock1_Copy3" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="790,171,0,0" FontSize="18" Width="99" Grid.Row="1"><Span FlowDirection="RightToLeft"><Run Text="ש"/><Run Text="ם משפחה"/></Span></TextBlock>
